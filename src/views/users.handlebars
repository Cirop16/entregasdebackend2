<link rel="stylesheet" href="/css/users.css">

<div class="users-container">
    <h2>Lista de Usuarios</h2>
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Rol</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td>{{first_name}} {{last_name}}</td>
                <td>{{email}}</td>
                <td>{{role}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>